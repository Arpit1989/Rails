<h1>Listing herokus</h1>

<table>
  <tr>
    <th>Heroku url</th>
    <th>Project</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @herokus.each do |heroku| %>
  <tr>
    <td><%= heroku.heroku_url %></td>
    <td><%= heroku.Project %></td>
    <td><%= link_to 'Show', heroku %></td>
    <td><%= link_to 'Edit', edit_heroku_path(heroku) %></td>
    <td><%= link_to 'Destroy', heroku, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

