<h2>Sign up</h2>

<%= form_for(@user) do |f| %> 
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>
 
 <div class="field">
    <%= f.label :firstname %><br />
    <%= f.text_field :fname %>
  </div>
  <div class="field">
    <%= f.label :lastname %><br />
    <%= f.text_field :lname %>
  </div>
  <div class="field">
    <%= f.label :Emp_id %><br />
    <%= f.text_field :emp_id %>
  </div>

  <div class="field">
    <%= f.label :Date_birth %><br />
    <%= f.date_select :date_birth %>
  </div>
  <div class="field">
    <%= f.label :Gender %><br />
    <%= f.text_field :gender %>
  </div>
  <div class="field">
    <%= f.label :Address %><br />
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :Hobbies %><br />
    <%= f.text_field :hobbies %>
  </div>
<div class="actions">
    
  
<%= render "devise/shared/links" %>
  <div><%= f.submit "Sign up" %></div></div>
<% end %>


