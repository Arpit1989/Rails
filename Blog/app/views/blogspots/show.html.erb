<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @blogspot.name %>
</p>

<p>
  <b>Title:</b>
  <%= @blogspot.title %>
</p>

<p>
  <b>Content:</b>
  <%= @blogspot.content %>
</p>

<p>
  <b>User:</b>
  <%= @blogspot.User %>
</p>
<h2>Comments</h2>
<% @blogspot.comments.each do |comment| %>
  <p>
    <b>Commenter:</b>
    <%= comment.commenter %>
  </p>
 
  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>
  <%= link_to('Destroy', blogspots_path) %>
<% end %>
<h2>Add a comment:</h2>
<%= simple_form_for([@blogspot, @blogspot.comments.build]) do |f| %>
  <div class="field">
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_blogspot_path(@blogspot) %> |
<%= link_to 'Back', blogspots_path %>
