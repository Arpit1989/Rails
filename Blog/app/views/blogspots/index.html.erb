<h1>Listing Blogs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @blogspots.each do |blogspot| %>
  <tr>
    <td><%= blogspot.name %></td>
    <td><%= blogspot.title %></td>
    <td><%= blogspot.content %></td>
    
    <td><%= link_to 'Show', blogspot %></td>
    <td><%= link_to 'Edit', edit_blogspot_path(blogspot) %></td>
    <td><%= link_to 'Destroy', blogspot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

